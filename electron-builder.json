{
  "appId": "com.lagrace.pos",
  "productName": "LA GRACE POS",
  "directories": {
    "output": "dist/release"
  },
  "publish": null,
  "asar": true,
  "asarUnpack": [
    "**/*.node",
    "node_modules/better-sqlite3/**",
    "node_modules/bcrypt/**"
  ],
  "files": [
    "electron/**/*",
    "src/**/*",
    "asset/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist/ui",
      "to": "ui",
      "filter": ["**/*"]
    },
    {
      "from": "print",
      "to": "print",
      "filter": ["**/*"]
    },
    {
      "from": "src/db/schema.sql",
      "to": "src/db/schema.sql"
    },
    {
      "from": "src/package.json",
      "to": "src/package.json"
    },
    {
      "from": "config.env",
      "to": "config.env"
    },
    {
      "from": "dist/ai/ai-lagrace",
      "to": "ai",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "asset/image/icon/photo.ico",
    "publisherName": "LA GRACE",
    "certificateFile": null,
    "sign": null
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "asset/image/icon/photo.ico",
    "uninstallerIcon": "asset/image/icon/photo.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "asset/image/icon/photo.png",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": "AppImage",
    "icon": "asset/image/icon/photo.png",
    "category": "Office"
  }
}
